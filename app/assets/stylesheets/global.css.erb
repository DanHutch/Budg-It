body {
  margin:0;
  padding:0;
  position:relative;
  color:#333;
  background-color:#fff;
  font-family:sans-serif;
}

.container {
  max-width:1200px;
  margin:auto;
  display:block;
}

.content {
  min-height:calc(100vh - 200px);
}

section {
  padding:40px 0;
}

section.blue {
  background-color:#158ad0;
  color:#f6f6f6;
}

section.white {
  background-color:#f6f6f6;
}

header, footer {
  min-height:100px;
  background-color:#3b372e;
  color:#f6f6f6;
}

header .container {
  display: flex;
  vertical-align: middle;
  justify-content: space-between;
}

.logo {
  display:block;
  color:white;
  text-decoration: none;
}

.logo:hover h1 {
  text-shadow: 0px 0px 3px rgba(255,255,255, 0.25)
}

.logo h1 {
  line-height: 100px;
  margin: 0;
}

nav {
display: flex;
}

nav a {
  line-height: 100px;
  margin-top: 10px;
  display: block;
}
